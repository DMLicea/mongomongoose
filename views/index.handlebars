
<div class="container-fluid">

        <div class="jumbotron text-center background-image">
            
            <div class="overlay">
                
                <div class="caption">
                    
                    <h1 class="display-1 text-white">Mongo Scraper</h1>
                    
                    <h2 class="text-white">Welcome to Waypoint!</h2>

                </div>
            
            </div>
        
        </div>

    <div class="row">

        <div class="col-12">
            
            {{#if articles}}
            
            {{#each articles}}
                
                <div class="card w-90">
                    
                    <div class="card-header text-white bg-primary">
                        
                        <a href={{link}} target="_blank" class="text-white">

                            <h2>{{title}}</h2>
                        
                        </a>
                    
                    </div>
                    
                    <div class="card-body">
                        
                        <p class="card-text">
                         
                            {{summary}}
                        
                        </p>
                        
                        <button id="{{_id}}" class="btn btn-primary save-btn">Save Article</button>
                    
                    </div>
                
                </div>
            
            {{/each}}
            
            {{else}}
            
                <div class="card text-white bg-warning w-90 p-1">

                    
                    <div class="card-body text-center">

                        No new articles :(
                    
                    </div>
                
                </div>

            {{/if}}

        </div>

    </div>
    
</div>